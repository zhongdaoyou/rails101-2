<div class="col-md-12">

  <h2 class="text-center"> 我加入的讨论版 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Description </th>
        <th> Post Count </th>
        <th> Last Update </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <th> <%= link_to(group.title, group_path(group)) %> </th>
        <th> <%= group.description %> </th>
        <th> <%= group.posts.count %> </th>
        <th> <%= group.updated_at %> </th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
